<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.octo.mob.octomeuh.settings.view.CircleDurationPickerView
        android:id="@+id/circleDurationPickerView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center_horizontal"
        app:maxValue="@integer/max_duration_seconds"
        app:step="@integer/duration_pitch_seconds"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/validateButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/save"/>

        <Button
            android:id="@+id/dismissButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_toStartOf="@+id/validateButton"
            android:layout_toLeftOf="@+id/validateButton" />

    </RelativeLayout>
</LinearLayout>