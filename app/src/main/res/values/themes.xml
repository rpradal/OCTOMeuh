<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimaryDark">@color/octo_blue_dark</item>
        <item name="colorPrimary">@color/octo_blue</item>
        <item name="colorAccent">@color/octo_blue_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorSecondary">@color/octo_blue_light</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/octo_blue_dark</item>
        <item name="colorPrimary">@color/octo_blue</item>
        <item name="colorAccent">@color/octo_blue_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorSecondary">@color/octo_blue_light</item>
    </style>

</resources>